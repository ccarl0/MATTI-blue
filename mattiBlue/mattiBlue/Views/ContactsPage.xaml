<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mattiBlue.Views.ContactsPage"
             xmlns:local="clr-namespace:mattiBlue.Views"
             xmlns:viewModels="clr-namespace:mattiBlue.ViewModels"
             xmlns:models="clr-namespace:mattiBlue.Models"
             xmlns:services="clr-namespace:mattiBlue.Services"
             x:DataType="viewModels:ContactsViewModel"
             Title="ContactsPage">

    <StackLayout>
        <Button Text="Scan for Devices" Command="{Binding ExecuteScanForDevicesCommandCommand}" />

        <CollectionView ItemsSource="{Binding Devices}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:BluetoothDevice">
                        <StackLayout>
                            <Label Text="{Binding Name}" />
                            <Label Text="{Binding Address}" />
                            <!-- Add other properties as needed -->
                        </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </StackLayout>
    
    
    
</ContentPage>