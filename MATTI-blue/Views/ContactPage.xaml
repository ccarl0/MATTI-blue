<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MATTI_blue.Views.ContactPage"
             xmlns:local="clr-namespace:MATTI_blue.Views"
             xmlns:models="clr-namespace:MATTI_blue.Models"
             xmlns:viewModels="clr-namespace:MATTI_blue.ViewModels"
             x:DataType="viewModels:ContactsVM"
             Title="Contacts">
    
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Command="{Binding GetActiveDevicesCommand}"/>

        <CollectionView ItemsSource="{Binding Devices}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:ContactModel">

                    <Frame Margin="0,0,5,0" CornerRadius="1000">
                        <StackLayout>
                            <Label Text="{Binding Name, StringFormat='Name: {0}'}" HorizontalOptions="Center" />
                        </StackLayout>
                    </Frame>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>